<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.company.mapper.BoardAttachMapper">

	<insert id="insert">
		insert into attach (uuid, uploadPath, fileName, image, bno)
		values (#{uuid}, #{uploadPath}, #{fileName}, #{image}, #{bno})
	</insert>
	
	<delete id="delete">
		delete from attach where uuid = #{uuid}
	</delete>
	
	<select id="findByBno" resultType="com.company.domain.BoardAttachVo">
		select * from attach where bno = #{bno}
	</select>
	
	<delete id="deleteAll">
		delete from attach where bno = #{bno}
	</delete>
	
	<select id="getOldFiles" resultType="com.company.domain.BoardAttachVo">
	
		select * from attach where uploadPath = to_char(now() -1, 'yyyy\mm\dd')
	</select>
</mapper>